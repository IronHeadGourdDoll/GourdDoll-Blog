# 基础镜像
FROM  openjdk:8-jre
# author
MAINTAINER gourddoll

# 挂载目录
VOLUME /home/gourddoll
# 创建目录
RUN mkdir -p /home/gourddoll
# 指定路径
WORKDIR /home/gourddoll
# 复制jar文件到路径
COPY ./jar/gourddoll-visual-monitor.jar /home/gourddoll/gourddoll-visual-monitor.jar
# 启动系统服务
ENTRYPOINT ["java","-jar","gourddoll-visual-monitor.jar"]